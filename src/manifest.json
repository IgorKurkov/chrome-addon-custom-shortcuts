{
  "name": "Custom Shortcuts (Google cal, Clickup)",
  "version": "1.0",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "description": "Add arrow navigation to Google Calendar, set task to done in clickup",
  "permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "commands": {
    "navigate-left": {
      "suggested_key": {
        "default": "Alt+Left",
        "mac": "Alt+Left"
      },
      "description": "Google calendar - Navigate Left"
    },
    "navigate-right": {
      "suggested_key": {
        "default": "Alt+Right",
        "mac": "Alt+Right"
      },
      "description": "Google calendar - Navigate Right"
    },
    "done-task-btn": {
      "suggested_key": {
        "default": "Alt+Up",
        "mac": "Alt+Up"
      },
      "description": "Done clickup task"
    },
    "fullscreen-btn": {
      "suggested_key": {
        "default": "Alt+Down",
        "mac": "Alt+Down"
      },
      "description": "Fullscreen clickup task"
    }
  },
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
